---
const { 
  label, 
  name, 
  type = "text", 
  placeholder, 
  required = false, 
  value = "",
  class: className,
  ...props 
} = Astro.props;
---
<div class:list={["mb-4", className]}>
  {label && (
    <label for={name} class="block text-sm font-semibold text-slate-700 mb-2">
      {label} {required && <span class="text-red-500">*</span>}
    </label>
  )}
  <input
    id={name}
    name={name}
    type={type}
    required={required}
    placeholder={placeholder}
    value={value}
    class="w-full px-4 py-3 bg-white border border-slate-200 rounded-xl text-slate-900 placeholder-slate-400 focus:border-slate-900 focus:ring-1 focus:ring-slate-900 outline-none transition-all duration-200"
    {...props}
  />
</div>
