---
const { 
  type = "button", 
  variant = "primary", 
  size = "md",
  class: className, 
  ...props 
} = Astro.props;

const baseStyles = "inline-flex items-center justify-center font-bold transition-all duration-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-offset-2";

const variants = {
  primary: "bg-slate-900 text-white hover:bg-slate-800 shadow-lg shadow-slate-900/20 focus:ring-slate-900",
  secondary: "bg-slate-100 text-slate-900 hover:bg-slate-200 focus:ring-slate-500",
  outline: "border-2 border-slate-200 text-slate-600 hover:border-slate-900 hover:text-slate-900 focus:ring-slate-900",
  danger: "bg-red-500 text-white hover:bg-red-600 shadow-lg shadow-red-500/20 focus:ring-red-500",
  ghost: "text-slate-500 hover:text-slate-900 hover:bg-slate-50"
};

const sizes = {
  sm: "text-xs px-3 py-1.5",
  md: "text-sm px-4 py-3",
  lg: "text-base px-6 py-4"
};

const styles = [baseStyles, variants[variant], sizes[size], className].join(" ");
---
<button type={type} class={styles} {...props}>
  <slot />
</button>
